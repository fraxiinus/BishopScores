<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryLightColor"
        android:id="@+id/calculator_original"
        android:padding="10dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/calc_dilation"/>

        <RadioGroup
                android:id="@+id/dilation_group"
                android:checkedButton="@id/first_dilation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/primaryColor"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/first_dilation"
                    android:text="0 cm"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="1 - 2"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="3 - 4"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="> 4"
                    style="@style/FlatRadioButton"
                    android:layout_marginRight="0dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/calc_effacement"/>

        <RadioGroup
                android:id="@+id/effacement_group"
                android:checkedButton="@id/first_effacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/primaryColor"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/first_effacement"
                    android:text="0 - 30%"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="40 - 50"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="60 - 70"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="> 70%"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/calc_station"/>

        <RadioGroup
                android:id="@+id/station_group"
                android:checkedButton="@id/first_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/primaryColor"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/first_station"
                    android:text="-3"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="-2"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="-1, 0"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="+1, +2"
                    style="@style/FlatRadioButton"
                    android:layout_width="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/calc_consistency"/>

        <RadioGroup
                android:id="@+id/consistency_group"
                android:checkedButton="@id/first_consistency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/primaryColor"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/first_consistency"
                    android:text="Firm"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="Medium"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="Soft"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/calc_position"/>

        <RadioGroup
                android:id="@+id/position_group"
                android:checkedButton="@id/first_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/primaryColor"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/first_position"
                    android:text="Posterior"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="Mid"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:text="Anterior"
                    style="@style/FlatRadioButton"
                    android:layout_width="80dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/calc_score"
                    android:paddingTop="10dp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:background="@color/secondaryTextColor"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="60dp"
                    android:id="@+id/score_tv"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/success_unfavorable"
                    android:background="@color/secondaryTextColor"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="100dp"
                    android:id="@+id/success_tv"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:visibility="gone"
                    android:id="@+id/calc_plus_note"
                    android:layout_marginLeft="100dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>